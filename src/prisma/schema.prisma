generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  name      String
  createdAt DateTime    @default(now())
  interviews Interview[]
}

model Interview {
  id        Int       @id @default(autoincrement())
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  question  String
  answer    String
  feedback  Json
  createdAt DateTime  @default(now())
}
